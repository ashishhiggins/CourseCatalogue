pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    environment {
        IMAGE_NAME = 'ashishhiggins/course-catalogue'  // Image name
    }
    stages{
        stage('Build Maven'){
            steps{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/ashishhiggins/CourseCatalogue.git']])
                sh 'mvn clean install'
            }
        }
        stage('Build Docker Image'){
            steps{
                script{
                    sh 'docker build -t ${IMAGE_NAME} .'
                }
            }
        }
      stage('Stop Docker Container on Port 9090') {
                  steps {
                      script {
                          sh '''
                          #!/bin/bash

                          # Find the container running on port 9090
                          container_id=$(docker ps -q -f "publish=9090")

                          # Check if a container was found and stop it
                          if [ -n "$container_id" ]; then
                            echo "Stopping container $container_id running on port 9090"
                            docker stop $container_id

                            # Wait for the container to stop completely before attempting to remove it
                            while [ "$(docker ps -q -f "id=$container_id")" ]; do
                              echo "Waiting for container $container_id to stop..."
                              sleep 2
                            done

                            # Check if the container is already removed (it might be auto-removed by Docker)
                            if ! docker ps -a -q -f "id=$container_id" > /dev/null; then
                              echo "Container $container_id has already been removed (possibly auto-removed by Docker)."
                            else
                              # Try removing the container once it's stopped
                              echo "Container $container_id stopped. Removing..."
                              retries=5
                              count=0
                              while [ $count -lt $retries ]; do
                                # Try removing the container
                                docker rm $container_id && break
                                # If it fails, wait for a few seconds and try again
                                echo "Waiting for container to be removed... attempt $((count+1))"
                                sleep 2
                                count=$((count+1))
                              done

                              if [ $count -ge $retries ]; then
                                echo "Failed to remove container $container_id after $retries attempts."
                                exit 1
                              fi
                            fi
                          else
                            echo "No container running on port 9090."
                          fi
                          '''
                      }
             }
      }
        stage('Deploy Docker Container') {
            steps {
                script {
                    // Run the Docker container
                    sh "docker run -d -p 9090:9090 ${IMAGE_NAME}"
                }
            }
        }
    }

}
